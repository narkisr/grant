{
 :sudoers/commands #{
   {
    :command/group :service
    :command/binary "/usr/sbin/service"
    :command/args [
       {:args/one-of #{"ssh" "docker-compose@elasticsearch"}}
       {:args/one-of #{"stop" "start" "restart" "status"}}
    ]
   }{
    :command/group :virtual
    :command/binary "/usr/bin/lxd"
    :command/args [
       {:args/constant "init"}
       {:args/constant "--auto"}
    ]
   }
 }

 :sudoers/users #{
   {:user/name "re-ops" :command/groups #{:virtual}}
 }
}
